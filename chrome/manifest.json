{
	"manifest_version": 2,
	"name": "NetMarks - Bookmarks menu",
	"short_name": "NetMarks",
	"version": "2.1.250",
	"default_locale": "en",
	"description": "__MSG_extDescription__",

	"minimum_chrome_version": "50",
	"browser_action": {
		"default_icon": "img/netmarks32.png",
		"default_popup": "popup.html",
		"default_title": "__MSG_extName__"
	},
	"icons": {
   		"16": "img/netmarks16.png",
   		"32": "img/netmarks32.png",
   		"48": "img/netmarks48.png",
   		"128": "img/netmarks128.png"
	},
	"permissions": [
		"bookmarks",
		"tabs",
		"chrome://favicon/",
		"activeTab",
		"clipboardWrite"
	],
	"web_accessible_resources": [ 
		"img/js16.png"
	],
	"options_page": "options.html",
	"background": {
		"scripts": [ "/js/background.js" ]
   	}
}
